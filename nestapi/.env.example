# =====================================================
# NestJS Authentication System - Environment Variables
# =====================================================
# Copy this file to .env and update with your values

# =====================================================
# Application
# =====================================================
NODE_ENV=development
PORT=3000

# =====================================================
# Database Configuration
# =====================================================
# Option 1: Use individual connection parameters
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=ruizhu

# Option 2: Use connection URL (alternative to individual params)
# DB_URL=mysql://root:password@localhost:3306/ruizhu

# =====================================================
# JWT Authentication
# =====================================================
# IMPORTANT: Change this to a strong random string in production
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-please

# JWT token expiration time
# Examples: '1h', '1d', '7d', '30d'
JWT_EXPIRES_IN=1d

# =====================================================
# WeChat Integration (Optional)
# =====================================================
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# =====================================================
# Tencent Cloud COS (Optional - for file uploads)
# =====================================================
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key
COS_BUCKET=your-bucket-name
COS_REGION=ap-guangzhou

# =====================================================
# Frontend URL (for CORS)
# =====================================================
FRONTEND_URL=http://localhost:5173
ADMIN_FRONTEND_URL=http://localhost:5174
