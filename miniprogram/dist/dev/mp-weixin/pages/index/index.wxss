/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: #ffffff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}
.custom-navbar .navbar-content {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 20rpx 40rpx;
  height: 88rpx;
}
.custom-navbar .brand-logo {
  font-size: 48rpx;
  font-weight: 700;
  letter-spacing: 4rpx;
  color: #000000;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
}
.custom-navbar .navbar-actions {
  display: flex;
  align-items: center;
  gap: 32rpx;
}
.custom-navbar .navbar-actions text {
  font-size: 44rpx;
  color: #000000;
  font-weight: 300;
}

/* 轮播图区域 */
.banner-section {
  margin-top: calc(88rpx + constant(safe-area-inset-top));
  margin-top: calc(88rpx + env(safe-area-inset-top));
  width: 100%;
  height: 920rpx;
}
.banner-section .banner-swiper {
  width: 100%;
  height: 100%;
}
.banner-section .banner-item {
  position: relative;
  width: 100%;
  height: 100%;
}
.banner-section .banner-image {
  width: 100%;
  height: 100%;
}
.banner-section .banner-overlay {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 2;
}
.banner-section .banner-title {
  font-size: 64rpx;
  font-weight: 500;
  color: #ffffff;
  letter-spacing: 2rpx;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}
.banner-section .banner-subtitle {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.banner-section .banner-subtitle .subtitle-text {
  font-size: 28rpx;
  color: #ffffff;
  letter-spacing: 1rpx;
  margin-bottom: 12rpx;
}
.banner-section .banner-subtitle .subtitle-line {
  width: 120rpx;
  height: 2rpx;
  background: #ffffff;
}
