/* 圆角 */
.page {
  min-height: 100vh;
  background: #ffffff;
  padding-bottom: 120rpx;
}

/* 购物车内容 */
.cart-content {
  display: flex;
  flex-direction: column;
  padding: 40rpx 0;
}

/* 购物车列表 */
.cart-list {
  flex: 1;
  padding: 0 40rpx;
}
.cart-list .list-header {
  display: flex;
  align-items: baseline;
  margin-bottom: 40rpx;
}
.cart-list .list-header .header-title {
  font-size: 48rpx;
  font-weight: 500;
  color: #000000;
}
.cart-list .list-header .item-count {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #999999;
}
.cart-list .cart-item {
  display: flex;
  gap: 24rpx;
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  position: relative;
}
.cart-list .cart-item .item-image {
  width: 160rpx;
  height: 160rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
  flex-shrink: 0;
}
.cart-list .cart-item .item-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart-list .cart-item .item-details .item-name {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}
.cart-list .cart-item .item-details .item-category {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 16rpx;
}
.cart-list .cart-item .item-details .item-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.cart-list .cart-item .item-details .item-footer .item-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
}
.cart-list .cart-item .item-details .item-footer .quantity-control {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: #ffffff;
  border-radius: 4rpx;
  padding: 4rpx 8rpx;
}
.cart-list .cart-item .item-details .item-footer .quantity-control .qty-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
  font-size: 24rpx;
  color: #999999;
  cursor: pointer;
  -webkit-user-select: none;
     -moz-user-select: none;
          user-select: none;
}
.cart-list .cart-item .item-details .item-footer .quantity-control .qty-btn:active {
  color: #333333;
}
.cart-list .cart-item .item-details .item-footer .quantity-control .qty-value {
  width: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333333;
}
.cart-list .cart-item .remove-btn {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #cccccc;
  cursor: pointer;
}
.cart-list .cart-item .remove-btn:active {
  color: #999999;
}

/* 价格摘要 */
.price-summary {
  padding: 40rpx;
  background: #f9f9f9;
  margin: 0 40rpx;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
}
.price-summary .summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}
.price-summary .summary-row .summary-label {
  color: #666666;
}
.price-summary .summary-row .summary-value {
  color: #333333;
  font-weight: 500;
}
.price-summary .summary-row .summary-value.free {
  color: #ff6b6b;
}
.price-summary .summary-row .summary-value.discount {
  color: #ff6b6b;
}
.price-summary .summary-divider {
  height: 1px;
  background: rgba(0, 0, 0, 0.1);
  margin: 20rpx 0;
}
.price-summary .total-row {
  margin-bottom: 0;
  margin-top: 12rpx;
}
.price-summary .total-row .summary-label {
  font-weight: 500;
  color: #000000;
}
.price-summary .total-row .total-price {
  font-size: 40rpx;
  font-weight: 700;
  color: #000000;
}

/* 购物车操作按钮 */
.cart-actions {
  display: flex;
  gap: 16rpx;
  padding: 0 40rpx 40rpx;
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  z-index: 100;
}
.cart-actions .action-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}
.cart-actions .action-btn text {
  display: block;
}
.cart-actions .continue-shopping {
  background: #f5f5f5;
  color: #000000;
  border: 1px solid #e0e0e0;
}
.cart-actions .continue-shopping:active {
  background: #e8e8e8;
}
.cart-actions .checkout-btn {
  background: #000000;
  color: #ffffff;
}
.cart-actions .checkout-btn:active {
  background: #333333;
}

/* 空购物车状态 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}
.empty-cart .empty-illustration {
  margin-bottom: 40rpx;
}
.empty-cart .empty-illustration .empty-icon {
  font-size: 120rpx;
  display: block;
}
.empty-cart .empty-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 16rpx;
  text-align: center;
}
.empty-cart .empty-description {
  display: block;
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 60rpx;
  text-align: center;
}
.empty-cart .empty-action-btn {
  width: 100%;
  max-width: 400rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000000;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 600;
  cursor: pointer;
}
.empty-cart .empty-action-btn:active {
  background: #333333;
}