.page {
  min-height: 100vh;
  background: #f9f9f9;
  padding-bottom: 120rpx;
}

/* 用户信息卡片 */
.user-card {
  position: relative;
  margin: 40rpx 40rpx 0;
  border-radius: 12rpx;
  overflow: hidden;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.user-card .card-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  background: linear-gradient(135deg, #000000 0%, #333333 100%);
  z-index: 1;
}
.user-card .user-info {
  position: relative;
  z-index: 2;
  padding: 40rpx;
  display: flex;
  gap: 32rpx;
  align-items: flex-start;
}
.user-card .user-info .avatar-section {
  flex-shrink: 0;
}
.user-card .user-info .user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #f5f5f5;
  border: 4rpx solid #ffffff;
}
.user-card .user-info .info-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 20rpx;
}
.user-card .user-info .info-section .user-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 8rpx;
}
.user-card .user-info .info-section .user-id {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 16rpx;
}
.user-card .user-info .info-section .member-badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: #f9d71c;
  border-radius: 20rpx;
  width: -moz-fit-content;
  width: fit-content;
}
.user-card .user-info .info-section .member-badge .badge-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #333333;
}

/* 统计卡片 */
.stats-section {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  padding: 24rpx 40rpx;
}
.stats-section .stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.stats-section .stat-card .stat-number {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 8rpx;
}
.stats-section .stat-card .stat-label {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

/* 菜单部分 */
.menu-section {
  padding: 24rpx 0;
  margin-top: 24rpx;
}
.menu-section .menu-group {
  margin-bottom: 24rpx;
  background: #ffffff;
  padding: 24rpx 0;
}
.menu-section .menu-group .menu-group-title {
  display: block;
  padding: 0 40rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
}
.menu-section .menu-group .menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  cursor: pointer;
  transition: background-color 0.2s ease;
}
.menu-section .menu-group .menu-item:last-child {
  border-bottom: none;
}
.menu-section .menu-group .menu-item:active {
  background-color: #f5f5f5;
}
.menu-section .menu-group .menu-item .menu-item-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.menu-section .menu-group .menu-item .menu-item-left .menu-icon {
  font-size: 36rpx;
  display: block;
  width: 40rpx;
  text-align: center;
}
.menu-section .menu-group .menu-item .menu-item-left .menu-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  font-weight: 400;
}
.menu-section .menu-group .menu-item .menu-arrow {
  font-size: 32rpx;
  color: #cccccc;
}

/* 登出部分 */
.logout-section {
  padding: 40rpx;
  padding-bottom: 80rpx;
}
.logout-section .logout-btn {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  color: #ff6b6b;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: 1px solid #ff6b6b;
  cursor: pointer;
  transition: all 0.3s ease;
}
.logout-section .logout-btn:active {
  background: #fff5f5;
}
.logout-section .logout-btn text {
  display: block;
}

/* 版本信息 */
.version-info {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
}
.version-info .version-text {
  font-size: 24rpx;
  color: #cccccc;
}