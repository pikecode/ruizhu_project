/* 圆角 */
.page {
  min-height: 100vh;
  background: #ffffff;
  padding-bottom: 120rpx;
}

/* 搜索栏 */
.search-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 20rpx 40rpx;
  background: #ffffff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}
.search-bar .search-input {
  width: 100%;
  height: 72rpx;
  padding: 0 24rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  font-size: 28rpx;
  color: #333333;
  border: none;
}

/* 筛选部分 */
.filter-section {
  padding: 20rpx 40rpx;
  background: #ffffff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}
.filter-section .filter-tabs {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  overflow-x: auto;
  padding-bottom: 12rpx;
}
.filter-section .filter-tabs::-webkit-scrollbar {
  height: 4rpx;
}
.filter-section .filter-tabs::-webkit-scrollbar-thumb {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 2rpx;
}
.filter-section .filter-tab {
  flex-shrink: 0;
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666666;
  border: 1px solid transparent;
}
.filter-section .filter-tab.active {
  background: #000000;
  color: #ffffff;
}
.filter-section .sort-options {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
}
.filter-section .sort-options::-webkit-scrollbar {
  height: 4rpx;
}
.filter-section .sort-options::-webkit-scrollbar-thumb {
  background: rgba(0, 0, 0, 0.2);
}
.filter-section .sort-item {
  flex-shrink: 0;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: #999999;
  border-bottom: 2rpx solid transparent;
}
.filter-section .sort-item.active {
  color: #000000;
  border-bottom-color: #000000;
}
.filter-section .sort-item.active .sort-text {
  font-weight: 500;
}

/* 商品网格 */
.products-section {
  padding: 40rpx;
}
.products-section .product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}
.products-section .product-item {
  background: #ffffff;
  border-radius: 8rpx;
  overflow: hidden;
  cursor: pointer;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.products-section .product-item:active {
  transform: scale(0.98);
}
.products-section .product-item .product-image-wrapper {
  position: relative;
  width: 100%;
  height: 340rpx;
  background: #f5f5f5;
  overflow: hidden;
}
.products-section .product-item .product-image-wrapper .product-image {
  width: 100%;
  height: 100%;
}
.products-section .product-item .product-image-wrapper .product-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 6rpx 12rpx;
  background: #000000;
  color: #ffffff;
  font-size: 20rpx;
  font-weight: 500;
  border-radius: 4rpx;
}
.products-section .product-item .product-info {
  padding: 24rpx;
}
.products-section .product-item .product-info .product-name {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 12rpx;
  font-weight: 400;
  line-height: 1.3;
}
.products-section .product-item .product-info .product-meta {
  margin-bottom: 12rpx;
}
.products-section .product-item .product-info .product-meta .product-category {
  font-size: 24rpx;
  color: #999999;
}
.products-section .product-item .product-info .product-price {
  display: block;
  font-size: 32rpx;
  color: #000000;
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}
.empty-state .empty-text {
  font-size: 28rpx;
  color: #999999;
}